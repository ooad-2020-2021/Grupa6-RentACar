@page
@model RegisterModel


@{
    ViewData["Title"] = "Registracija";
}

<h1>@ViewData["Title"]</h1>

<div class="row" style="justify-content: center">
    <div class="col-md-12; border border-primary" style="padding: 30px; width: 50%">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="text-align: center ">Kreiranje računa</h4>
            <h4 style="text-align: center ">Brzo i jednostavno!</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center">
                <input type="s" value="Nastavi" class="btn btn-primary" style="width: 170px" />
            </div>
            <div style="text-align: center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Već posjedujete račun?</a>
            </div>
        </form>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
